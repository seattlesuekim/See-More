<% @results.each do |r| %>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-1" align="right" height="80px" >
      <%= image_tag "github.png" %>
    </div>
    <div class="col-md-1">
      <!-- <div class="avatar"> -->
        <%= link_to image_tag("#{r[:avatar]}", :class=> "img-thumbnail", size: "80"), r[:link], target: "_blank" %>
      <!-- </div> -->
    </div>
    <div class="col-md-7">
      <div class="text">
        <div class="author">
          <%= link_to r[:username], r[:link], target: "_blank" %>
        </div>

       <!--  <%= button_to "Subscribe", "", class: 'btn btn-info'  %> -->
      </div>
    </div>
  </div>
<br>
<% end %>
